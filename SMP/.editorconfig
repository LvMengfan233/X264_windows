root = true

# All files
[*]
indent_style = space
indent_style = tab  # 缩进风格
tab_width = 4  # 缩进宽度
charset = utf-8-bom  # 文件编码格式，Visual Studio使用utf-8-bom，以防警告
end_of_line = lf  # 行尾格式，Windows一般为CRLF，Linux一般为LF，根据需要更改
insert_final_newline = true   #文件结尾添加换行符，以防警告

# Xml files
[*.xml]
indent_size = 2
